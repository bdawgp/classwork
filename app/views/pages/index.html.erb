<h1>Trending pages</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Posts</th>
      <th>Intro</th>
      <th>Tags</th>
      <th>Created On</th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each do |page| %>
    <tr>
      <td><%= link_to page.title, page_path(page) %></td>
      <td><%= page.posts.count %></td>
      <td><%= page.intro %></td>
      <td><%= page.category %></td>
      <td><%= page.created_at.strftime '%m/%d/%Y' %> (<%= page.user.email %>)</td>
    </tr>
    <% end %>
  </tbody>
</table>
