<div id="movie" class="clearfix" style="background-image: url('http://image.tmdb.org/t/p/w1280{{ .Backdrop }}');">
  <div class="poster">
    <img src="http://image.tmdb.org/t/p/w600{{ .Poster }}" alt="{{ .Title }} Poster">
  </div>
  <div class="info">
    <h2>{{ .Title }}</h2>
    <p>{{ .Overview }}</p>
  </div>
</div>
